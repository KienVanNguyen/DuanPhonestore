<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context=".User.Activity.ChitietspActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCTSP"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#00a5ff">

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/shimmer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:maxLines="1"
            android:text="Chi tiết sản phẩm"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:textStyle="bold" />

    </androidx.appcompat.widget.Toolbar>



    <ImageView
        android:id="@+id/imgProduct"
        android:src="@drawable/iphone13"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="10dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ScrollView
         android:layout_marginBottom="60dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <com.google.android.material.card.MaterialCardView
        style="@style/MyCardView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <LinearLayout
                android:weightSum="10"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="9"
                    android:id="@+id/txtNameProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Iphone 13 pro"
                    android:textSize="22dp"
                    android:textColor="#1C1C1B"
                    android:textStyle="bold"
                    android:layout_margin="10dp"/>

                <TextView
                    android:id="@+id/txtGiaProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:text="35.000.000VND"
                    android:textColor="#FF0000"
                    android:textSize="18dp" />
            </LinearLayout>
            <RatingBar
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.5"
                android:layout_marginLeft="10dp"
                android:progressTint="#00a5ff"
                style="@android:style/Widget.DeviceDefault.Light.RatingBar.Small"
                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginTop="-20dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/imgTruChitietsp"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/minus"
                    />
                <TextView
                    android:id="@+id/txtSoluongChitietsp"
                    android:background="@drawable/bg_itemcard"
                    android:text="1"
                    android:layout_marginLeft="10dp"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:layout_marginTop="5dp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"/>

                <ImageView
                    android:id="@+id/imgCongChitietsp"
                    android:layout_gravity="center"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/plus"/>
            </LinearLayout>
<!--            <ScrollView-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content">-->

                <TextView
                    android:id="@+id/txtChitietProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="iPhone 13 Pro Max - siêu phẩm được mong chờ nhất ở nửa cuối năm 2021 đến từ Apple. Máy có thiết kế không mấy đột phá khi so với người tiền nhiệm, bên trong đây vẫn là một sản phẩm có màn hình siêu đẹp, tần số quét được nâng cấp lên 120 Hz mượt mà, cảm biến camera có kích thước lớn hơn"
                    android:textColor="#000000"
                    android:textSize="20dp" />
<!--            </ScrollView>-->

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phản hồi và đánh giá"
                android:textSize="20dp"
                android:drawableLeft="@drawable/cmt"
                android:drawablePadding="10dp"
                android:textStyle="bold"
                android:textColor="#000000"/>

            <LinearLayout
                android:orientation="horizontal"
                android:weightSum="10"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtComment"
                android:layout_width="60dp"
                android:layout_height="45dp"
                android:layout_weight="9"
                android:paddingLeft="20dp"
                android:background="@drawable/bg_cmt"
                android:hint="Phản hồi"
             />
                <ImageView
                    android:id="@+id/imgSend"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:layout_width="30dp"
                    android:layout_marginRight="5dp"
                    android:layout_height="30dp"
                    android:src="@drawable/sendcmt"/>
            </LinearLayout>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/RCV_Comment"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>
    </ScrollView>

        <RelativeLayout
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

