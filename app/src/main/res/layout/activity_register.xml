<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    style="@style/loginParent"
    tools:context=".RegisterActivity">

    <ScrollView
        style="@style/parent">
        <RelativeLayout
            style="@style/parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:weightSum="12">

                <LinearLayout
                    style="@style/parent"
                    android:background="@drawable/login_shape_bk"
                    android:orientation="vertical"
                    android:layout_weight="3">
                    <ImageView
                        style="@style/parent"
                        android:background="@drawable/ic_login_bk"
                        android:contentDescription="login background" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:orientation="vertical"
                android:layout_marginTop="120dp"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp">

                <androidx.cardview.widget.CardView
                    style="@style/loginCard"
                    app:cardCornerRadius="@dimen/loginCardRadius"
                    android:elevation="5dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/loginViewsMargin"
                    android:layout_marginBottom="@dimen/loginViewsMargin"
                    android:background="@color/whiteCardColor">

                    <LinearLayout
                        style="@style/linearParent"
                        android:layout_gravity="center"
                        android:padding="@dimen/loginViewsMargin">

                        <TextView
                            style="@style/headerTextPrimary"
                            android:text="Đăng ký"
                            android:layout_marginTop="@dimen/loginViewsMargin"/>


                        <EditText
                            android:id="@+id/edtNameRe"
                            android:layout_marginTop="20dp"
                            style="@style/modifiedEditText"
                            android:inputType="text"
                            android:maxLines="1"
                            android:hint="Tên"/>
                        <EditText
                            android:id="@+id/edtEmailRe"
                            android:layout_marginTop="10dp"
                            style="@style/modifiedEditText"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Email"/>
                        <EditText
                            android:id="@+id/edtPhoneRe"
                            android:layout_marginTop="10dp"
                            style="@style/modifiedEditText"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Số điện thoại"/>
                        <EditText
                            android:id="@+id/edtAddressRe"
                            android:layout_marginTop="10dp"
                            style="@style/modifiedEditText"
                            android:inputType="textEmailAddress"
                            android:maxLines="1"
                            android:hint="Địa chỉ"/>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/edtPassRe"
                                style="@style/modifiedEditText"
                                android:hint="Mật khẩu"
                                android:layout_weight="7"
                                android:inputType="textPassword"
                                />
                            <ImageView
                                android:layout_gravity="bottom"
                                android:id="@+id/imgeyere"
                                android:layout_weight="3"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:onClick="ShowHidePassRe"
                                android:src="@drawable/showeye"/>
                        </LinearLayout>
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:layout_height="wrap_content">
                            <EditText
                                android:id="@+id/edtConfirmPassRe"
                                style="@style/modifiedEditText"
                                android:hint="Nhập lại mật khẩu"
                                android:layout_weight="7"
                                android:inputType="textPassword"
                                />
                            <ImageView
                                android:layout_gravity="bottom"
                                android:id="@+id/imgeyecofirmre"
                                android:layout_weight="3"
                                android:layout_width="40dp"
                                android:layout_height="30dp"
                                android:onClick="ShowHidePassReConfirm"
                                android:src="@drawable/showeye"/>
                        </LinearLayout>

                        <Button
                            android:id="@+id/btnRegister"
                            style="@style/loginButton"
                            android:layout_gravity="center"
                            android:layout_marginTop="15dp"
                            android:textSize="18dp"
                            android:text="Đăng ký"
                            android:textAllCaps="false" />
                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:weightSum="10"
                            android:gravity="center"
                            android:layout_marginTop="15dp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Đã có tài khoản?"
                                android:textAlignment="center"
                                android:textColor="@color/black"
                                />
                            <TextView
                                android:layout_weight="1"
                                android:id="@+id/tvLogin"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:text="Đăng nhập."
                                android:textAlignment="center"
                                android:textColor="@color/primaryTextColor"
                                />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/crice_register"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="15dp"
                android:background="@drawable/round_background"
                android:padding="15dp"
                android:src="@drawable/user"/>
        </RelativeLayout>

    </ScrollView>
</RelativeLayout>